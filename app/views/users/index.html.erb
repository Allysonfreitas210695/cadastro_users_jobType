<p id="notice"><%= notice %></p>

<div class="container-sm d-block mx-5">
  <h1 class="mb-4 fs-2">
    <%= User.model_name.human(count: User.count)%>
  </h1>

  <table class="table">
    <thead class="table-dark">
      <tr>
        <th><%= t('table.name') %></th>
        <th><%= t('table.cpf') %></th>
        <th><%= t('table.age')  %></th>
        <th><%= t('table.profession')  %></th>
        <th><%= t('table.category')  %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="table-warning"><%= user.nome %></td>
          <td class="table-warning"><%= user.cpf %></td>
          <td class="table-warning"><%= user.idade %></td>
          <td class="table-warning"><%= user.profissao %></td>
          <td class="table-warning"><%= user.job_type.category %></td>
          <td class="table-warning"><%= link_to t('links.show'), user %></td>
          <td class="table-warning"><%= link_to t('links.edit'), edit_user_path(user) %></td>
          <td class="table-warning"><%= link_to t('links.destroy'), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to t('links.new'), new_user_path, class: 'btn btn-dark' %>
<div class=".container">
