      <%= form.label t('table.cpf'), for:"formGroupExampleInput", class:"form-label fw-bold"%>
      <%= form.text_field :cpf, class:"form-control", id:"formGroupExampleInput" %>
    </div>

    <div class="mb-3">
      <%= form.label t('table.age'), for:"formGroupExampleInput", class:"form-label fw-bold"  %>
      <%= form.text_field :idade, class:"form-control", id:"formGroupExampleInput" %>
    </div>

    <div class="mb-3">
      <%= form.label t('table.profession'), for:"formGroupExampleInput", class:"form-label fw-bold" %>
      <%= form.text_field :profissao, class:"form-control", id:"formGroupExampleInput", placeholder:'Digite sua ProfissÃ£o' %>
    </div>
    
    <div class="mb-3">
      <%= form.label User.human_attribute_name(:job_type), for:"formGroupExampleInput", class:"form-label fw-bold"  %>
      <%= form.select("job_type_id", @job_type_options, {include_blank: t('user.select')}, class:"form-control", id:"formGroupExampleInput")%>
